- const reviewCount = 50;

//- Start our page
doctype html
html(lang="en")
  head
    //- Required meta tags
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")

    //- Bootstrap CSS
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")

    //- Custom CSS
    link(rel="stylesheet", href="../browser/css/main.scss")

    //- More page content
    title Programming mentor - Todd Wolfson
  body
    .container
      .row.pt-3
        .col-12
          h1 Programming mentor
          h2 Todd Wolfson
          hr.hr--header
      .row
        .col-12.col-lg-4.col-xl-3
          //- mb-3 spacing for cards next to cards on mobile view
          .card.mb-3
            - const getGravatarUrl = (imgSize) => `https://s.gravatar.com/avatar/15927fc52919e9223adc7ed99e125d4d?s=${encodeURIComponent(imgSize)}`;
            - const avatarText = "Photo of Todd Wolfson";
            img.d-none.d-lg-block.card-img-top(src=getGravatarUrl(400) alt=avatarText)
            .card-body
              .media
                img.d-lg-none.mr-3(src=getGravatarUrl(64) alt=avatarText)
                p.media-body
                  | Todd Wolfson
                  br
                  | Senior Software Engineer
                  br
                  span(aria-label="5 star") 5.0 &#11088;
                  = " ("
                  a(href="#reviews") #{reviewCount} reviews
                  | )
                //- TODO: Verify review link is good
              p
                | $120 / hour
                br
                | $10 / 5 minutes
              p
                | Location: San Francisco, CA
                br
                | Hours: 10AM-9PM PST
              p
                //- TODO: Verify link is good
                a.btn.btn-primary.btn-block(href="#contact") Contact
                a.btn.btn-secondary.btn-block(href="https://www.timeanddate.com/worldclock/converter.html?p1=224") Compare timezone
        .col-12.col-lg-8.col-xl-9
          .card
            .card-body
              p.lead Work with a former Uber and startup software engineer as your mentor

              #skills
                h5 Skills
                p
                  - let skills = [];
                  - skills.push("JavaScript (9 years)");
                  - skills.push("Node.js (7 years)");
                  - skills.push("Python (6 years)");
                  - skills.push("Ruby (4 years)");
                  - skills.push("HTML/CSS (14 years)");
                  - skills.push("SQL (9 years)");
                  - skills.push("Ruby on Rails (2 years)");
                  - skills.push("bash");
                  - skills.push("git");
                  - skills.push("OAuth2");
                  //- - skills.push("MVC");
                  //- - skills.push("ORM");
                  - skills.push("AWS Lambda");
                  for skill, i in skills
                    span.badge.badge-secondary= skill
                    if i != (skills.length - 1)
                      = " "

              #how-does-it-work
                h5 How does it work?
                ul
                  li
                    = "Contact me "
                    a(href="#contact") via the form below
                  //- DEV: Timing should correspond with form itself
                  li I'll reply within 24 hours (usually 1-2 hours)
                  li We talk and verify that I am suitable to mentor you
                  li We schedule a time and use Zoom to screenshare through your problems
              #reviews
                h5
                  ="Reviews, "
                  span(aria-label="5 star") 5.0 &#11088;
                  =" (50 reviews)"
                //- TODO: Make this a grid of 3
                - let reviews = [];
                - reviews.push({content: 'Amazing tutor with lots of insight on different systems front and back end.', signature: 'Jammie T., July 2020'});
                - reviews.push({content: 'Total cool dude knew his stuff and was able to explain things to me the way I needed things explained!', signature: 'Erik A., July 2020'});
                - reviews.push({content: 'Todd was very helpful in walking me though a structured process for getting around a coding block I was facing. Thanks!', signature: 'Anthony L., July 2020'});
                //- - reviews.push({content: 'I totally recommend Todd. He has impressive programming skills and the ability to explain, which is a rare combination.', signature: 'Marcela X., August 2020'});
                //- - reviews.push({content: 'Clear thinker and knowledgeable across a range of topics and was very good at explaining concepts.', signature: 'Sam F., July 2020'});
                .row
                  for review in reviews
                    .col-4
                      .card.mb-3
                        .card-body
                          p.mb-2.text-center(aria-label="5 star") &#11088;&#11088;&#11088;&#11088;&#11088;
                          p.mb-2= review.content
                          p.mb-0
                            i= "- " + review.signature
                .row
                  .col-12
                    .card.mb-3
                      .card-body.text-center
                        = `View all ${reviewCount} reviews `
                        a(href="https://www.codementor.io/@twolfson") here
              #contact
                <script type="text/javascript" src="https://form.jotform.com/jsform/202376968124057"></script>
